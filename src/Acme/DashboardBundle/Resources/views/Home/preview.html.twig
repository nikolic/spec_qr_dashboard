{% extends 'AcmeDashboardBundle::layout.html.twig' %}
{% block body %}
	<div class="row">
		<div class="large-6 columns">
			<div class="row">
				<div class="large-12 centered columns">Details:</div>
			</div>
			<br/>		
			<div class="row">
				<div class="large-4 columns">Created:</div>
				<div class="large-8 columns">{{created|date('Y-m-d H:i:s')}}</div>
			</div>
			<br/>
			<div class="row">
				<div class="large-4 columns">Filename:</div>
				<div class="large-8 columns">{{filename}}</div>
			</div>
			<br/>
			<div class="row">
				<div class="large-4 columns">Weight:</div>
				<div class="large-8 columns">{{weight}}</div>
			</div>
		</div>
		<div class="large-6 columns">
			<img src="{{url}}" style="width:250px; height:250px;" />
		</div>
	</div>
	<br/>
	<div class="row">
		<div class="large-4 column">
			<a class="small button" href="{{ path('acme_dashboard_create', { 'name': 'user' }) }}">Create another</a>
		</div>
		<div class="large-4 column">
			<a class="small button"> Send to mail:</a>
		</div>
		<div class="large-4 column">
			<a class="small button" onclick="window.print();"> Print </a>	
		</div>
	</div>


{% endblock %}