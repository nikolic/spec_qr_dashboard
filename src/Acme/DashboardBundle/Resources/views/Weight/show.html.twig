{% extends 'AcmeDashboardBundle::layout.html.twig' %}

{% block body %}
<div class="row">
    <h1>Weight</h1>

    <table class="record_properties large-12 columns">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Points</th>
                <td>{{ entity.points }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entity.active }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('weight') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('weight_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
</div>
{% endblock %}
