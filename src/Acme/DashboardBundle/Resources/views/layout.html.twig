<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %} Welcome!{% endblock %}</title>

        {% stylesheets '@AcmeDashboardBundle/Resources/public/css/*' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% block stylesheets %}{% endblock %}

        <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
        <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
        <script src="//cdn.jsdelivr.net/foundation/4.3.2/js/vendor/custom.modernizr.js"></script>

    </head>
    <body>
        <div class="row">
            <div class="large-12 columns">
                 <div class="row">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        Hi {{ app.user.username }}
                        <a href="{{ path('fos_user_security_logout') }}">{{ 'logout'|trans({}, 'FOSUserBundle') }}</a>
                    {% endif %}
                </div>
                <h2>Dashboard</h2>
                <hr />
            </div>
        </div>
     

        <div class="row" id="content">
            <!-- Main content -->
            <div class="large-8 columns">
                  {% block body %}{% endblock %}
            </div>

            <!-- sidebar -->
            <div class="large-4 columns">
                <h4>Navigation</h4>
                <ul class="disc">
                    <li>
                        <a href="{{ path('acme_dashboard_create', { 'name': 'user' }) }}">
                        Code Generator</a>
                    </li>
                    <li>
                        <a href="{{ path('acme_dashboard_statistics', { 'name': 'user' }) }}">Statistics</a>
                    </li>
                    <li>
                        <a href="{{ path('acme_dashboard_reports', { 'name': 'user' }) }}">Reports</a>
                    </li>
                    <li>
                        <a href="{{ path('acme_dashboard_settings', { 'name': 'user' }) }}">Settings</a>
                    </li>
                </ul>
            </div>

        </div>

        <!-- JS  -->

        <script src="//cdn.jsdelivr.net/foundation/4.3.2/js/foundation.min.js"></script>

        {% block javascripts %}{% endblock %}

        <!-- JS  -->
    </body>
</html>
